<idea-plugin>
    <id>kela.plugins.dsl</id>
    <name>Drools DSL IDE Support</name>
    <category>JVM Frameworks</category>
    <vendor email="keeganpeaco@gmail.com">Keegan Pasqualoni</vendor>
    <depends>com.intellij.modules.platform</depends>
    <extensions defaultExtensionNs="com.intellij">
        <fileType
            name="dsl"
            implementationClass="kela.plugins.dsl.lang.DSLFileType"
            fieldName="INSTANCE"
            language="dsl"
            extensions="dsl"
        />
        <lang.parserDefinition
            language="dsl"
            implementationClass="kela.plugins.dsl.lang.parser.DSLParserDefinition"/>
        <lang.syntaxHighlighterFactory
            language="dsl"
            implementationClass="kela.plugins.dsl.lang.highlight.DSLSyntaxHighlighterFactory"/>
        <colorSettingsPage
                implementation="kela.plugins.dsl.lang.highlight.DSLColorSettingsPage"/>
        <lang.commenter
            language="dsl"
            implementationClass="kela.plugins.dsl.lang.util.DSLCommenter"/>
    </extensions>
</idea-plugin>