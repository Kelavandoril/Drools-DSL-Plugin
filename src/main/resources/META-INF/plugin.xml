<idea-plugin>
    <id>kela.plugins.dsl</id>
    <name>Drools DSL IDE Support</name>
    <vendor email="keeganpeaco@yahoo.com">Kelavandoril</vendor>
    <depends>com.intellij.modules.platform</depends>
    <extensions defaultExtensionNs="com.intellij">
        <!-- ******************** DSL ******************** -->
        <fileType
                name="dsl"
                implementationClass="kela.plugins.drools.dsl.lang.DSLFileType"
                fieldName="INSTANCE"
                language="dsl"
                extensions="dsl"
        />
        <lang.parserDefinition
                language="dsl"
                implementationClass="kela.plugins.drools.dsl.lang.parser.DSLParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="dsl"
                implementationClass="kela.plugins.drools.dsl.lang.highlighter.DSLSyntaxHighlighterFactory"/>
        <colorSettingsPage
                implementation="kela.plugins.drools.dsl.lang.highlighter.DSLColorSettingsPage"/>
        <lang.commenter
                language="dsl"
                implementationClass="kela.plugins.drools.dsl.lang.highlighter.DSLCommenter"/>

        <!-- ******************** DSLR ******************** -->
        <fileType
                name="dslr"
                implementationClass="kela.plugins.drools.dslr.lang.DSLRFileType"
                fieldName="INSTANCE"
                language="dslr"
                extensions="dslr"
        />
        <lang.parserDefinition
                language="dslr"
                implementationClass="kela.plugins.drools.dslr.lang.parser.DSLRParserDefinition"/>
    </extensions>
</idea-plugin>