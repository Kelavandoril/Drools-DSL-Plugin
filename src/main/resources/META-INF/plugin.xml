<idea-plugin>
    <id>kela.plugins.dsl</id>
    <name>Drools DSL IDE Support</name>
    <vendor email="keeganpeaco@yahoo.com">Kelavandoril</vendor>
    <depends>com.intellij.modules.platform</depends>
    <extensions defaultExtensionNs="com.intellij">
        <!-- ******************** DSL ******************** -->
        <fileType
            name="dsl"
            implementationClass="kela.plugins.drools.dsl.lang.DSLFileType"
            fieldName="INSTANCE"
            language="dsl"
            extensions="dsl"
        />
        <!-- ******************** DSLR ******************** -->
        <fileType
                name="dslr"
                implementationClass="kela.plugins.drools.dslr.lang.DSLRFileType"
                fieldName="INSTANCE"
                language="dslr"
                extensions="dslr"
        />
    </extensions>
</idea-plugin>